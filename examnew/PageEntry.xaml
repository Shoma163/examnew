<Page x:Class="examnew.PageEntry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:examnew"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEntry">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Margin="5" VerticalAlignment="Center">
            <Label Content="Войти" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"></Label>

            <Label Content="Логин"></Label>
            <TextBox Name="tbLogin"></TextBox>

            <Label Content="Пароль"></Label>
            <TextBox Name="tbPass"></TextBox>

            <Button Content="Войти" Background="White" Margin="0 10 0 0" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
